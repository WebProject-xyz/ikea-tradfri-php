{
  "name": "webproject-xyz/ikea-tradfri-php-api",
  "description": "PHP library to control ikea tradfri hub",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Benjamin Fahl",
      "email": "ben@webproject.xyz",
      "role": "developer"
    }
  ],
  "type": "library",
  "homepage": "https://www.webproject.xyz",
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "phpro/grumphp": true,
      "phpstan/extension-installer": true
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "doctrine/collections": "^1"
  },
  "require-dev": {
    "codeception/codeception": "^4",
    "codeception/module-asserts": "^2.0.0 || ^3.0",
    "codeception/mockery-module": "^0.4.0",
    "mockery/mockery": "^1",
    "friendsofphp/php-cs-fixer": "^3.0",
    "monolog/monolog": "^2",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^5.4",
    "phpro/grumphp": "^1.4",
    "phpstan/phpstan": "^1.4.10",
    "phpstan/extension-installer": "^1.1.0",
    "phpstan/phpstan-mockery": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "IKEA\\": "src/IKEA"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IKEA\\Tests\\Unit\\": "tests/Unit/"
    },
    "classmap": [
      "tests/_support"
    ]
  },
  "scripts": {
    "run-tests": [
      "./vendor/bin/codecept run --colors"
    ],
    "cs-check": [
      "./vendor/bin/php-cs-fixer fix --dry-run -vv"
    ],
    "xDebugOn": [
      "echo 'Activating xDebug'",
      "echo 'zend_extension=xdebug.so' >> ~/.phpenv/versions/$(phpenv version-name)/etc/conf.d/xdebug.ini || return 0"
    ],
    "build-coverage": [
      "echo 'Build coverage'",
      "./vendor/bin/codecept run --coverage-xml=clover.xml --coverage --xml --colors --steps "
    ]
  }
}
