{
  "name": "webproject-xyz/ikea-tradfri-php-api",
  "description": "PHP library to control ikea tradfri hub",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Benjamin Fahl",
      "email": "ben@webproject.xyz",
      "role": "developer"
    }
  ],
  "homepage": "https://www.webproject.xyz",
  "require": {
    "php": "~8.1.0 || ~8.2.0",
    "ext-json": "*",
    "doctrine/collections": "^2.1.2"
  },
  "require-dev": {
    "codeception/codeception": "^5.0.10",
    "codeception/mockery-module": "^0.5.0",
    "codeception/module-asserts": "^3.0.0",
    "friendsofphp/php-cs-fixer": "^3.21.1",
    "mockery/mockery": "^1.6.2",
    "phpro/grumphp": "^2.0.0",
    "phpstan/extension-installer": "^1.3.1",
    "phpstan/phpstan": "^1.10.24",
    "phpstan/phpstan-mockery": "^1.1.1",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^5.4 || ^6.0.19 || ^6.1",
    "rector/rector": "^0.17.2"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "IKEA\\": "src/IKEA"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IKEA\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true
  },
  "scripts": {
    "build-coverage": [
      "echo 'Build coverage'",
      "./vendor/bin/codecept run --coverage-xml=clover.xml --coverage --xml --colors --steps "
    ],
    "php-cs-fixer": "php-cs-fixer fix -vv --path-mode=intersection",
    "php-cs-fixer-full": "vendor/bin/php-cs-fixer fix -v",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1 packages --error-format table",
    "run-tests": [
      "./vendor/bin/codecept run --colors"
    ]
  }
}
