{
  "name": "webproject-xyz/ikea-tradfri-php-api",
  "description": "PHP library to control ikea tradfri hub",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Benjamin Fahl",
      "email": "ben+github@webproject.xyz",
      "role": "developer"
    }
  ],
  "homepage": "https://www.webproject.xyz",
  "require": {
    "php": "~8.3.0 || ~8.4.0",
    "ext-filter": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "doctrine/collections": "^2.4.0",
    "psr/log": "^3.0.2",
    "roave/better-reflection": "^6.66.0",
    "symfony/polyfill-mbstring": "^1.33.0",
    "symfony/process": "^7.3.4",
    "symfony/property-access": "^7.3.3",
    "symfony/property-info": "^7.3.5",
    "symfony/serializer": "^7.3.5",
    "symfony/service-contracts": "^3.6.1",
    "symfony/validator": "^7.3.6",
    "webmozart/assert": "^1.12.1"
  },
  "require-dev": {
    "codeception/codeception": "^5.3.2",
    "codeception/mockery-module": "^0.5.0",
    "codeception/module-asserts": "^3.2.1",
    "ergebnis/license": "^2.7.0",
    "ergebnis/php-cs-fixer-config": "^6.56.0",
    "friendsofphp/php-cs-fixer": "^3.89.2",
    "maglnet/composer-require-checker": "^4.18.0",
    "mockery/mockery": "^1.6.12",
    "phpro/grumphp": "^2.17.0",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpdoc-parser": "^2.3.0",
    "phpstan/phpstan": "^2.1.31",
    "phpstan/phpstan-doctrine": "^2.0.11",
    "phpstan/phpstan-mockery": "^2.0.0",
    "phpunit/phpunit": "^12.4.2",
    "rector/rector": "^2.2.7",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^7.3.5",
    "wmde/psr-log-test-doubles": "^3.4.0"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "IKEA\\Tradfri\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IKEA\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true
  },
  "scripts": {
    "build-coverage": [
      "echo 'Build coverage'",
      "./vendor/bin/codecept run --coverage-xml=clover.xml --coverage --xml --colors --steps "
    ],
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix -vv --path-mode=intersection",
    "php-cs-fixer-full": "vendor/bin/php-cs-fixer fix -v --show-progress dots",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1  --no-progress --no-ansi",
    "run-tests": [
      "./vendor/bin/codecept run --colors"
    ]
  }
}
