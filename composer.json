{
  "name": "webproject-xyz/ikea-tradfri-php-api",
  "description": "PHP library to control ikea tradfri hub",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Benjamin Fahl",
      "email": "ben@webproject.xyz",
      "role": "developer"
    }
  ],
  "homepage": "https://www.webproject.xyz",
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
    "ext-json": "*",
    "doctrine/collections": "^1.8"
  },
  "require-dev": {
    "codeception/codeception": "^5.0.8",
    "codeception/mockery-module": "0.5.0",
    "codeception/module-asserts": "^3.0.0",
    "friendsofphp/php-cs-fixer": "^3.14.4",
    "mockery/mockery": "^1.5.1",
    "phpro/grumphp": "^v1.15.0",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.9.17",
    "phpstan/phpstan-mockery": "^1.1.0",
    "psr/log": "^3.0.0",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^5.4 || ^6.0.19 || ^6.1"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "IKEA\\": "src/IKEA"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IKEA\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true
  },
  "scripts": {
    "build-coverage": [
      "echo 'Build coverage'",
      "./vendor/bin/codecept run --coverage-xml=clover.xml --coverage --xml --colors --steps "
    ],
    "php-cs-fixer": "php-cs-fixer fix -vv --path-mode=intersection",
    "php-cs-fixer-full": "vendor/bin/php-cs-fixer fix -v",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1 packages --error-format table",
    "run-tests": [
      "./vendor/bin/codecept run --colors"
    ]
  }
}
